<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

   <persistence-unit name="fantagame-jpa2" transaction-type="RESOURCE_LOCAL">
        <jta-data-source>java:/comp/env/jdbc/fantagameDB</jta-data-source>
<!--      <mapping-file>META-INF/persistence-query.xml</mapping-file>-->
      
      
       <class>com.fantagame.be.business.data.bean.Andamento</class>
      <class>com.fantagame.be.business.data.bean.Authorities</class>
      <class>com.fantagame.be.business.data.bean.Calendario</class>
      <class>com.fantagame.be.business.data.bean.Classifica</class>
      <class>com.fantagame.be.business.data.bean.squadra.FantaSquadra</class>
      <class>com.fantagame.be.business.data.bean.squadra.rosa.Formazione</class>
      <class>com.fantagame.be.business.data.bean.squadra.rosa.Giocatore</class>
      <class>com.fantagame.be.business.data.bean.Gruppo</class>
      <class>com.fantagame.be.business.data.bean.Persona</class>
      <class>com.fantagame.be.business.data.bean.squadra.rosa.Ruolo</class>
      <class>com.fantagame.be.business.data.bean.squadra.RealSquadra</class>
      <class>com.fantagame.be.business.data.bean.UserLogin</class>
      
       <exclude-unlisted-classes/>
      
      <properties>
       		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
            <property name="hibernate.connection.zeroDateTimeBehavior" value="convertToNull"/> 
      </properties>
      
   </persistence-unit>
</persistence>

